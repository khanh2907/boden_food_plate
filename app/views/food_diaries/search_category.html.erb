<table class="table" id="<%= @category.id %>">
  <thead>
    <th>Food</th>
    <th></th>
  </thead>
  <tbody>
    <% @category.foods.each do |food|%>
    <tr>
      <td data-order="<%= food.name %>">
        <div>
          <div class="col-md-5">
          <% unless food.image_path.nil? %>
            <img class="lazy draggable" data-food-id="<%= food.id %>" data-original="<%= food.image_path %>" width="75" data-food-name="<%= food.name.gsub(/[,](\S)/) { ", #{$1}" } %>" data-serving-size="<%= food.serving_size %>" data-swap-tip="<%= food.swap_tip %>"/>
          <% else %>
            <img class="lazy draggable"  data-food-id="<%= food.id %>" data-original="/tmp-foods/<%= (0..4).to_a.sample %>.png" height="75" data-food-name="<%= food.name.gsub(/[,](\S)/) { ", #{$1}" } %>" data-serving-size="<%= food.serving_size %>" data-swap-tip="<%= food.swap_tip %>"/>
          <% end %>
          </div>
          <div class="col-md-7">
            <div class="row">
              <%= food.name.gsub(/[,](\S)/) { ", #{$1}" } %>
            </div>
            <div class="row">
              <small><%= food.serving_size %></small>
            </div>
          </div>
        </div>
      </td>
      <td>
        <a class="btn btn-default btn-xs add-food-btn" data-food-id="<%= food.id %>"><%= fa_icon 'plus' %></a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
  var table = $('table#<%= @category.id %>');
  // Initialise the food table
  table.dataTable({
    "bSort" : false,
    "order": [ 0, 'asc' ],
    "scrollY":        "400px",
    "scrollCollapse": true,
    "paging":         false,
    "bInfo": false,
    fnDrawCallback: function() {
      // lazy loading for food images
      table.find('.lazy:not(.loaded)').lazyload({
        effect : "fadeIn",
        container: table.parent()
      });

      // force the first few foods to appear
      table.find('.lazy:lt(6)').trigger('appear');

      // set draggable
      table.find('.lazy:not(.loaded)').each(function() {
        $(this).draggable({
          appendTo: 'body',
          containment: 'window',
          scroll: false,
          revert: "invalid",
          helper: "clone",
          cursor: "move"
        });
        $(this).addClass('loaded');
      });
      table.find('.add-food-btn:not(.loaded)').each(function() {
        var button = $(this)
        button.on('click', function(e) {
          var food = $(this).parent().parent().find('td').find('.draggable')
          addFoodToPlate(food)
        });
        button.addClass('loaded')
      });
    }
  });
  $('#<%= @category.id %>_wrapper').find('.col-xs-6')[0].remove()
</script>